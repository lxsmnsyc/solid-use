{
  "exclude": ["node_modules"],
  "include": ["src", "types", "test"],
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Bundler",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ES2017",
    "useDefineForClassFields": false,
    "declarationMap": true
  }
}
